---
const currentLanguage = Astro.url.pathname.startsWith('/en') ? 'en' : 'ru';

function switchLanguage(lang: string) {
  const newPath = Astro.url.pathname.replace(/^\/(en|ru)/, '');
  window.location.href = `/${lang}${newPath}`;
}
---

<div>
  <button onclick={() => switchLanguage('ru')} disabled={currentLanguage === 'ru'}>
    Русский
  </button>
  <button onclick={() => switchLanguage('en')} disabled={currentLanguage === 'en'}>
    English
  </button>
</div>
