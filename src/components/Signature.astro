    .signature {
      margin-top: 20px;
      font-size: 0.9em;
      color: #555;
    }
  
    .signature ul {
      list-style-type: none;
      padding: 0;
    }
  
    .signature li {
      margin-bottom: 5px;
    }
  
    .signature a {
      color: #007acc;
      text-decoration: none;
    }
  
    .signature a:hover {
      text-decoration: underline;
    }
  </style>
  