---
import BaseLayout from '../layouts/Base.astro';
import PostPreview from "@/components/blog/PostPreviewB";
import SocialMediaLinks from "@/components/SocialMediaLinks";
import { getAllPosts, sortMDByDate, sortMDByPinned } from "@/utils";

const MAX_POSTS = 15;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
const allPostsByPinned = sortMDByPinned(allPostsByDate);

const tech: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Openode.xyz",
		desc: "Наше сообщество",
		href: "https://openode.xyz",
	},
	{
		title: "Git.Openode.XYZ",
		desc: "Наш независимый Git-репозиторий. Делаем копии важного",
		href: "https://git.openode.xyz",
	},
	{
		title: "KiberLic",
		desc: "Блог КиберЛиса",
		href: "https://kiberlis.ru",
	},
	{
		title: "Bench.openode.xyz",
		desc: "Бенч-тест сервера с несколькими локациями speedtest",
		href: "https://www.markdownguide.org/",
	}
];

---

<BaseLayout title="Home">
	<section>
		<h1 class="title">Hello World</h1>
		<p class="mb-4 sm:mb-8">
			Всем привет! 
			Это будет простым и открытым форматом блога.
			Вы можете предлагать свои статьи - через PR в репозитории.
		</p>
		<div>
			<span>You can find me on: </span>
			<SocialMediaLinks/>
		</div>
	</section>

	<section class="mt-8 sm:mt-16">
		<h2 class="title">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{allPostsByPinned.map(p => <PostPreview post={p}/>)}
		</ul>
	</section>

	<section class="mt-16">
			<h2 class="title">Полезные ссылки</h2>
			<ul class="space-y-4 sm:space-y-2">
				{
					tech.map(({ href, title, desc }) => (
						<li>
							<a
								href={href}
								target="_blank"
								rel="noopener noreferrer"
								class="cody-link inline-block"
							>
								{title}
							</a>: 
							<p class="inline-block sm:mt-2">{desc}</p>
						</li>
					))
				}
			</ul>
		</section>
</BaseLayout>
